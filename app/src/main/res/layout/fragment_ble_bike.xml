<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout_ble"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <include
        android:id="@+id/loading_container_ble"
        layout="@layout/loading_container" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id ="@+id/ble_bike_frame"
            android:orientation="vertical"
            android:visibility="gone">


            <ImageView
                android:id="@+id/bike_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:contentDescription="@string/bike_name"
                android:padding="20dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/footer_bikes_off" />

            <TextView
                android:id="@+id/bike_ble_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:padding="10dp"
                android:textSize="19.0sp"
                app:layout_constraintTop_toBottomOf="@+id/bike_image"
                android:layout_gravity="center_horizontal" />
            <LinearLayout
                android:id="@+id/alarms_btn_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/ble_bike_frame"
                android:padding="10dp"
                android:layout_gravity="center_horizontal"
                >

                <Button
                    android:id="@+id/alarm_on"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/holo_green_dark"
                    android:text="@string/alarm_on"
                    android:layout_marginEnd="10dp"/>

                <Button
                    android:id="@+id/alarm_off"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/holo_red_dark"
                    android:text="@string/alarm_off"
                    android:layout_marginStart="10dp"/>

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</android.support.constraint.ConstraintLayout>
